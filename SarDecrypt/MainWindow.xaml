<Window x:Class="SarDecrypt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SarDecrypt"
        mc:Ignorable="d"
        Title="Sar Decrypter" Height="115" Width="155" ResizeMode="NoResize">
    <StackPanel >
        <Button x:Name="openButton" Content="Open" Click="openSar"/>
        <Button x:Name="decryptButton" Content="Decrypt" Click="decryptSar"/>
        <Button x:Name="saveButton" Content="Save" Click="saveSar"/>
        <TextBox x:Name="statusBox" Text="..." TextAlignment="Center" IsReadOnly="True"/>
    </StackPanel>
</Window>
